<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="persistenceUnit">
        <class>com.epam.training.dataaccess.model.BedEntity</class>
        <class>com.epam.training.dataaccess.model.ClientEntity</class>
        <class>com.epam.training.dataaccess.model.BookingEntity</class>
        <class>com.epam.training.dataaccess.model.RequestEntity</class>
        <class>com.epam.training.dataaccess.model.RoomEntity</class>
        <class>com.epam.training.dataaccess.model.SuiteEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/example"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="myuser"/>
            <property name="hibernate.connection.password" value="mypassword"/>
            <property name="hibernate.enable_lazy_load_no_trans" value="true" />
        </properties>
    </persistence-unit>
</persistence>
